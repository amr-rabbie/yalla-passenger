<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asi.yalla_passanger_eg.Fragments.AboutFragment">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/loooooosogooo"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Drivesyouhappy"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="www.Yalla.com"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/header_bgColor"
                android:layout_marginTop="16dp"

                />
            <TextView
                android:id="@+id/play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/RateOnGooglePlay"
                android:textSize="18sp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/header_bgColor"
                android:layout_marginTop="16dp"

                />
            <TextView
                android:id="@+id/fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Likeusonface"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/header_bgColor"
                android:layout_marginTop="16dp"

                />
            <TextView
                android:id="@+id/legal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Legal"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/header_bgColor"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:text="Version .4"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        />
</RelativeLayout>
