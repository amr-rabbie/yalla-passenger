<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asi.yalla_passanger_eg.RequestCarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/loooooosogooo"
                />
            <com.victor.loading.rotate.RotateLoading
                android:id="@+id/rotateloading"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:loading_width="5dp"
                app:loading_color="@color/colorPrimary"
                android:layout_gravity="center"/>
        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/requestingcar"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            />
    </LinearLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:onClick="CloseRequest"
        android:paddingTop="15dp"
        app:fb_borderColor="#FFFFFF"
        android:visibility="gone"
        app:fb_borderWidth="1dp"
        app:fb_defaultColor="@color/thirdColor"
        app:fb_focusColor="@color/Wheat"
        app:fb_iconPosition="left"
        app:fb_radius="3dp"
        app:fb_text="@string/dialog_cancell"
        app:fb_textColor="#FFFFFF" />
</RelativeLayout>
